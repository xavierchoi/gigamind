    "cross-env": "^10.1.0",
    "express": "^4.21.0",
    "glob": "^11.1.0",
    "gray-matter": "^4.0.3",
    "i18next": "^25.7.3",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "keytar": "^7.9.0",
    "openai": "^4.104.0",
    "p-limit": "^7.2.0",
    "react": "^18.2.0",
    "react-i18next": "^16.5.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
